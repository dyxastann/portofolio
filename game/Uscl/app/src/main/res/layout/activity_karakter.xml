<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#a0f0ff"
    android:padding="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/bback"
            android:textSize="12sp"
            android:layout_margin="0dp"
            android:textStyle="bold"
            android:visibility="invisible"
            />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_gravity="center">
                <TextView
                    android:id="@+id/nama_karakter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Judul Materi"
                    android:layout_gravity="center"
                    android:textStyle="bold"/>

        </ScrollView>

        <Button
            android:id="@+id/next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="top|right"
            android:text="Next"
            android:textSize="12sp"
            android:layout_margin="0dp"
            android:textStyle="bold"
            android:visibility="invisible"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/karakter"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/mchar5small"
        />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            >

            <TextView
                android:id="@+id/detail_karakter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detail materi disini."
                />
        </ScrollView>
    <Button
        android:id="@+id/but_return"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Return"/>

</LinearLayout>
